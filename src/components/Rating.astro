---
import { Image } from "astro:assets";

interface Props {
	rating?: number;
}

const {
	rating = 5,
} = Astro.props as Props;

const arrRating = new Array(rating);
for (let i = 0; i < arrRating.length; i++) {
	arrRating[i]=i
}
---

<div class="flex">
	{arrRating.map((i) => (
		<Image src="/star.svg" alt="" width={22} height={22} />
	))}
</div>